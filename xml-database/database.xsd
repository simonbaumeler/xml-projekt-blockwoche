<?xml version="1.0" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="energie-data">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="energyTypes"/>
                <xs:element ref="participants"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="energyTypes">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="energyType" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="energyType">
        <xs:complexType>
            <xs:attribute name="key" type="xs:string" />
            <xs:attribute name="display_value" type="xs:string" />
        </xs:complexType>
    </xs:element>

    <xs:element name="participants">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="participant" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="participant">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
                <xs:element name="startDatetime" type="xs:string"/>

                <xs:element ref="address"/>
                <xs:element ref="energyTransactions"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="address">
        <xs:complexType>
            <xs:all>
                <xs:element name="firstname" type="xs:string"/>
                <xs:element name="middlename" type="xs:string"/>
                <xs:element name="lastname" type="xs:string"/>
                <xs:element name="street" type="xs:string"/>
                <xs:element name="housenumber" type="xs:string"/>
                <xs:element name="city" type="xs:string"/>
                <xs:element name="state" type="xs:string"/>
                <xs:element name="country" type="xs:string"/>
            </xs:all>
        </xs:complexType>
    </xs:element>

    <xs:element name="energyTransactions">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="energyTransaction" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="energyTransaction">
        <xs:complexType>
            <xs:attribute name="energyType" type="xs:string" />
            <xs:attribute name="amount" type="xs:decimal" />
            <xs:attribute name="ratePerUnit" type="rate" />
            <xs:attribute name="timestamp" type="xs:string" />
            <xs:attribute name="priceTotal" type="xs:decimal" />
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="rate">
        <xs:restriction base="xs:decimal">
            <xs:minInclusive value="0"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
